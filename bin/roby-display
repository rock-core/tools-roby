#! /usr/bin/env ruby
# frozen_string_literal: true

begin
    require "roby/cli/display"
    Roby::CLI::Display.start(ARGV)
    exit 0
rescue Interrupt
    Roby.info "Interrupted by user"
    exit 1
rescue SystemExit
    raise
rescue Exception => e
    Roby.log_exception_with_backtrace(e, Roby, :warn)
    exit 1
end
